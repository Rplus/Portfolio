/**
 * helper
 */
$page-break-after {
  @media print {
    page-break-after: always;
  }
}

$transition-all {
  transition: all .3s;
}

$break-unit {
  display: inline-block;
}


.bu {
  @extend $break-unit;
}



/////

* {
  box-sizing: border-box;
  margin: 0; // reset all
}

html {
  padding: 0 1rem;
  background-color: $iron;

  @media print {
    background: transparent;
  }
}

body {
  margin: 1rem auto;
  padding: 5rem 7%;
  max-width: 50rem;
  background-color: $page-bgc;
  color: $oil;
  font-family: Constantia, "Palatino Linotype", Palatino, Georgia, serif;
  line-height: 1.5;
  box-shadow: $shadow-diff 5px 2px rgba($black, .3);
}

li {
  list-style-type: square;
}

hr {
  width: 80%;
  margin: 1rem auto;
  border: none;
  border-top: 1px dashed rgba($black, .15);
}

a {
  $link-color = darken(#f00, 40%);
  color: $link-color;
  border-bottom: 1px solid rgba($link-color, .2);
  text-decoration: none;
  transition: all .3s;

  &:hover {
    border-color: rgba($link-color, .5);
  }

  &[href^="//"] {
    cursor: alias;
  }
}

abbr {
  border-bottom: 1px dotted $aluminum;
}

/////

.cv-header {
  text-align: center;
  margin-bottom: 3rem;
}

.hello {
  @extend $break-unit;
  max-width: 19rem;
  vertical-align: middle;

  .say-hi {
    padding-left: 1.5rem;
    text-shadow: 2px 2px 2px rgba($black, .2);
    font-family: 'Courgette', cursive;
  }

  small {
    display: block;
    padding: 10px 1.5rem 0;
    color: $steel;
    font-size: 55%;
    font-weight: lighter;
    font-style: italic;
    line-height: 1.5;
    letter-spacing: .5px;
  }
}

.avatar {
  $avatar-src  = '//lh4.googleusercontent.com/-O-6vrPqu3Cc/VHyWdhpZr5I/AAAAAAAAE4Y/FB4KwsWDsGo/s300/1402968_10200777524752764_501037865_o_1_1.jpg';

  @extend $transition-all;
  display: inline-block;
  width: 200px;
  height: @width;
  margin: 0 auto 1rem;
  vertical-align: middle;
  border-radius: 50%;
  background: url($avatar-src) 50% / 200px no-repeat;
  transition-timing-function: cubic-bezier(.5, 3, .8, .8);
  box-shadow: inset $shadow-diff 1px 0 rgba($black, .1),
              0   0   0   4px lighten($white, 30%),
              0   0   1px 4px rgba($black, .2),
              2px 2px 3px 4px rgba($black, .15);
  cursor: grab;

  &:hover {
    background-size: 105%;
    transform: rotate(-3deg);
  }
}

.nick-name {
  vertical-align: -.5em;
}

.lang {
  @extend $break-unit;
}



///// svg

.icon {
  @extend $transition-all;
  display: inline-block;
  vertical-align: bottom;
}

.icon-Rplus {
  width: 2em;
  height: 2em;
  margin-left: .5em;

  &:hover {
    fill: #d50000;
  }
}



/////

.contact {
  padding-left: 50px;
  padding-right: 50px;
  text-align: center;
  line-height: 0; // hack for ::after placeholder

  &::after {
    content: '';
    display: inline-block;
    width: 250px;
    max-width: 100%;
  }

  @media print {
    text-align: left;

    &::after {
      display: none;
    }
  }
}

.contact-item {
  display: inline-block;
  list-style-type: none;
  margin-right: 1rem;
  margin-bottom: .5rem;

  @media print {
    min-width: 45%;
    // display: block;
  }
}

.contact-link {
  position: relative;
  display: block;
  border: none;
  text-decoration: none;
  white-space: nowrap;

  &:focus::after,
  &:hover::after {
    bottom: 100%;
    max-width: 5em;
    opacity: 1;
    background-color: rgba($steel, .2);
  }

  // tooltip
  &::after {
    @extend $transition-all;
    content: attr(title);
    position: absolute;
    border-left: 8px solid rgba($steel, .2);
    border-bottom: 5px solid transparent;
    color: $oil;
    padding: 3px 5px 3px 0;
    background-clip: padding-box;
    line-height: normal;
    bottom: 50%;
    left: 75%;
    opacity: 0;
    max-width: 0;
    overflow: hidden;
    text-transform: capitalize;
    pointer-events: none;

    @media print {
      position: static;
      content: attr(href);
      margin-left: .3rem;
      border: none;
      text-transform: none;
      opacity: 1;
    }
  }

  .icon {
    width: 2rem;
    height: 2rem;
    vertical-align: middle;
    border-radius: 50%;
    background-color: $iron;
    fill: $page-bgc;
    box-shadow: $shadow-diff 3px 1px $aluminum;
  }

  &:active .icon,
  &:focus .icon,
  &:hover .icon {
    fill: $white;
    background-color: $aluminum;
    box-shadow: inset $shadow-diff 3px 1px $steel,
                inset -1px -1px 3px -1px rgba($white, .5);

  }
}



/////

.cv-section {
  margin-bottom: 3rem;

}

.section-title {
  margin-bottom: .5rem;
  text-transform: capitalize;
  font-variant: small-caps;
}

.cv-section--intro p {
  margin: 1rem 1rem;
}

.cv-section--skill {
  @extend $page-break-after;
}



/// exp list

.cv-section--experience {
  @extend $page-break-after;
  line-height: 1.3;

  ul ul,
  ul ul ul {
    padding-left: 5%;
  }

  li {
    list-style-type: none;
  }
}

.exp-items {
  padding-left: 7%;
}

.exp-item {
  margin-bottom: 1rem;
  list-style-type: none;
}

.exp-item__header {
  position: relative;
  font-weight: normal;

  &:last-of-type {
    margin-bottom: .5rem;
  }

  &::before {
    // vertical-center();
    content: '';
    position: absolute;
    top: 1rem * .3 * .5; // .3 = 1.3 line-height - 1rem ; .5 = top + bottom
    left: -1rem;
    width: .5rem;
    height: 1rem;
    background-color: rgba($black, .1);
  }
}

.task-list {
  margin-bottom: .5rem;
  margin-bottom: 1rem;

  li {
    position: relative;
    margin-bottom: .5rem;
    list-style-type: none;

    &::before {
      content: '';
      position: absolute;
      left: -.7rem;
      top: .5rem;
      width: 2px;
      height: 2px;
      border: 1px solid rgba($black, .5);
      transform: rotate(45deg)
    }
  }
}

.task-list__group__title {
  margin-bottom: .3rem;
  margin-left: -.5rem;
  color: rgba($black, .5);
}

.date {
  text-transform: capitalize;
  font-variant: small-caps;
  font-family: monospace;
  font-size: small;
  color: rgba($black, .5);
}

.business-card {
  height: 150px;
  background: url('//cdn.rawgit.com/Rplus/R-logo/v7/R+.svg') 90% 50% / 201px no-repeat;
}

/////
// partial content

.see-more {
  display: none;
}

#card:target {

  & ~ {

    .see-more {
      display: block;
    }

    .cv-section--experience,
    .cv-section--intro,
    .business-card {
      display: none;
    }
  }
}

