/**
 * color
 *  via: foundation color
 */

$white     = #fff;
$smoke     = #eee;
$gainsboro = #ddd;
$iron      = #ccc;
$base      = #aaa;
$aluminum  = #999;
$steel     = #666;
$oil       = #333;
$black     = #000;



/**
 * variable
 */
$shadow-diff = 1px 1px;



/**
 * functions
 */





/**
 * Mixin
 */





/**
 * helper
 */
$page-break-after {
  @media print {
    page-break-after: always;
  }
}

$break-unit {
  display: inline-block;
}




/////

* {
  box-sizing: border-box;
  margin: 0; // reset all
}

html {
  background-color: $iron;
  padding: 0 1rem;

  @media print {
    background-color: transparent;
  }
}

body {
  margin: 1rem auto;
  padding: 5rem 7%;
  max-width: 50rem;
  background-color: $white;
  color: $oil;
  font-family: Constantia, "Palatino Linotype", Palatino, Georgia, serif;
  letter-spacing: .5px;
  box-shadow: $shadow-diff 5px 2px rgba($black, .3);
}

li {
  list-style-type: square;
}

hr {
  width: 80%;
  margin: 1rem auto;
  border: 1px dashed $gainsboro;
}

a {
  color: darken(#f00, 10%);
}

abbr {
  border-bottom: 1px dotted $aluminum;
}

/////

.cv-header {
  text-align: center;
  margin-bottom: 3rem;
}

.hello {
  @extend $break-unit;
  max-width: 19rem;
  vertical-align: middle;

  .say-hi {
    padding-left: 1.5rem;
    text-shadow: 2px 2px 2px rgba($black, .2);
    font-family: 'Courgette', cursive;
  }

  small {
    display: block;
    padding: 10px 1.5rem 0;
    color: $steel;
    font-size: 55%;
    font-weight: lighter;
    font-style: italic;
    line-height: 1.5;
    letter-spacing: .5px;
  }
}

.avatar {
  $avatar-src  = '//lh4.googleusercontent.com/-O-6vrPqu3Cc/VHyWdhpZr5I/AAAAAAAAE4Y/FB4KwsWDsGo/s300/1402968_10200777524752764_501037865_o_1_1.jpg';

  display: inline-block;
  width: 200px;
  height: @width;
  margin: 0 auto 1rem;
  vertical-align: middle;
  border-radius: 50%;
  background: url($avatar-src) 50% / 200px no-repeat;
  transition: all .3s cubic-bezier(.5, 3, .8, .8);
  box-shadow: inset $shadow-diff 1px 0 rgba($black, .1),
              0   0   0   4px #fff,
              0   0   1px 4px rgba($black, .2),
              2px 2px 3px 4px rgba($black, .15);

  &:hover {
    background-size: 105%;
    transform: rotate(-3deg);
  }
}

.nick-name {
  vertical-align: -.5em;
}



///// svg

.icon {
  display: inline-block;
  vertical-align: bottom;
  transition: all .3s;
}

.icon-Rplus {
  width: 2em;
  height: 2em;
  margin-left: .5em;

  &:hover {
    fill: #d50000;
  }
}



/////

.contact {
  padding-left: 50px;
  padding-right: 50px;
  text-align: center;
  line-height: 0; // hack for ::after placeholder

  &::after {
    content: '';
    display: inline-block;
    width: 250px;
    max-width: 100%;
  }

  @media print {
    text-align: left;

    &::after {
      display: none;
    }
  }
}

.contact-item {
  display: inline-block;
  list-style-type: none;
  margin-right: 1rem;
  margin-bottom: .5rem;

  @media print {
    min-width: 45%;
    // display: block;
  }
}

.contact-link {
  position: relative;
  display: block;
  text-decoration: none;
  white-space: nowrap;

  &:focus::after,
  &:hover::after {
    bottom: 100%;
    max-width: 5em;
    opacity: 1;
    background-color: rgba($steel, .2);
  }

  // tooltip
  &::after {
    content: attr(title);
    position: absolute;
    border-left: 8px solid rgba($steel, .2);
    border-bottom: 5px solid transparent;
    color: #333;
    padding: 3px 5px 3px 0;
    background-clip: padding-box;
    line-height: normal;
    bottom: 50%;
    left: 75%;
    opacity: 0;
    max-width: 0;
    overflow: hidden;
    transition: all .3s;
    text-transform: capitalize;
    pointer-events: none;

    @media print {
      position: static;
      content: attr(href);
      margin-left: .3rem;
      border: none;
      text-transform: none;
      opacity: 1;
    }
  }

  .icon {
    width: 2rem;
    height: 2rem;
    vertical-align: middle;
    border-radius: 50%;
    background-color: $iron;
    fill: $white;
    box-shadow: $shadow-diff 3px 1px $aluminum;
  }

  &:focus .icon,
  &:hover .icon {
    background-color: $aluminum;
    box-shadow: inset $shadow-diff 3px 1px $steel,
                inset -1px -1px 3px -1px rgba($white, .5);

  }
}



/////

.cv-section {
  margin-bottom: 3rem;

}

.section-title {
  margin-bottom: .5rem;
  text-transform: capitalize;
  font-variant: small-caps;
}

.cv-section--intro p {
  margin: 1rem 1rem;
}

.cv-section--skill {
  @extend $page-break-after;
}

.cv-section--experience {
  @extend $page-break-after;

  h4 {
    font-weight: normal;
  }

  .task-list {
    padding-left: 5%;
  }

}

.date {
  text-transform: capitalize;
  font-variant: small-caps;
  font-family: monospace;
}

.business-card {
  height: 150px;
  background: url('//cdn.rawgit.com/Rplus/R-logo/v7/R+.svg') 90% 50% / 201px no-repeat;
}

/////
// partial content

#card:target {
  & ~ {
    .cv-section--experience,
    .cv-section--intro,
    .business-card {
      display: none;
    }
  }
}

