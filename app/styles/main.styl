/**
 * color
 *  via: foundation color
 */

$white     = #fff;
$smoke     = #eee;
$gainsboro = #ddd;
$iron      = #ccc;
$base      = #aaa;
$aluminum  = #999;
$steel     = #666;
$oil       = #333;
$black     = #000;



/**
 * variable
 */
$shadow-diff = 1px 1px;
$page-bgc    = rgba($white, .9);


/**
 * functions
 */





